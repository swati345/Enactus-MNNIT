<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin1.enactusmnnit.Team"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:text="Teamwork is the ability to work together toward a common vision..."
        android:textAlignment="center"
        android:textSize="18dp"
        android:textIsSelectable="true"
        android:textColor="#090909"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="8dp"

      android:orientation="horizontal"
      android:background="@drawable/bg_transparent"
      android:weightSum="1">
      <RelativeLayout
          android:layout_width="150dp"
          android:layout_height="match_parent"
         >
      <ImageView
          android:layout_width="match_parent"
          android:layout_margin="4dp"
          android:id="@+id/president"
          android:scaleType="center"
          android:layout_height="match_parent" />
      </RelativeLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_marginTop="30dp"
          android:layout_marginLeft="4dp"
          android:layout_marginBottom="4dp"
          android:layout_marginRight="4dp"
          android:layout_height="30dp"
          android:id="@+id/prest"
          android:textColor="#060404"
          android:textSize="18dp"
          android:gravity="center_horizontal" />
          <TextView
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:text="PRESIDENT"
              android:textStyle="bold"
              android:textAlignment="center"
              android:textColor="#fece3e"
              android:textSize="18dp" />
      </LinearLayout>
  </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:paddingRight="4dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_transparent"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:id="@+id/vprest"
            android:textColor="#060404"
            android:textSize="18dp"
            android:gravity="center_horizontal" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="VICE PRESIDENT"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#fece3e"
                android:textSize="18dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="150dp"
            android:id="@+id/vpresident"
            android:scaleType="center"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
 <Button
     android:layout_width="150dp"
     android:layout_height="30dp"
     android:textStyle="bold"
     android:id="@+id/one"
     android:gravity="center_vertical"
     android:text="1st year"
     android:textColor="#060404"
     android:layout_marginLeft="15dp"
     android:layout_marginRight="25dp"
     android:layout_marginTop="4dp"
     android:layout_marginBottom="4dp"
     android:background="@drawable/bg_transparent"
     android:textAlignment="center" />
    <Button
        android:layout_width="150dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="2nd year"
        android:id="@+id/two"
        android:layout_height="30dp"
        android:textColor="#060404"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_transparent"
        android:textAlignment="center"
        android:layout_gravity="center_vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
    <Button
        android:layout_width="150dp"
        android:textStyle="bold"
        android:id="@+id/three"
        android:gravity="center_vertical"
        android:text="3rd year"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_height="30dp"
        android:textColor="#060404"

        android:background="@drawable/bg_transparent"
        android:textAlignment="center" />
    <Button
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textColor="#060404"
        android:textStyle="bold"
        android:id="@+id/four"
        android:gravity="center_vertical"
        android:text="Final year"
        android:layout_marginRight="15dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/bg_transparent"
        android:textAlignment="center"
        android:layout_gravity="center_vertical" />
        </LinearLayout>
</LinearLayout>
